---
layout: page
---
<div class="post">
  <article>
    {% if page.profiles.current_members %}
      <h2>Current Lab Members</h2>
      <div class="row">
        {% for profile in page.profiles.current_members %}
          <div class="col-md-4">
            <div class="profile text-center">
              {% if profile.image %}
                {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
                {% if profile.image_circular %}
                  {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
                {% else %}
                  {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
                {% endif %}
                <img src="{{ site.baseurl }}/{{ profile_image_path }}" class="{{ profile_image_class }}" alt="{{ profile.name }}">
              {% endif %}
              <h4>{{ profile.name }}</h4>
              <p style="color: #007acc;">{{ profile.role }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if page.profiles.friends_of_the_lab %}
      <h2>Friends of the Lab</h2>
